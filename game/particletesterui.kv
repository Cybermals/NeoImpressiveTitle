#:kivy 1.9.0

<MainScreen>:
    particle: particle.text
    
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"

        BoxLayout:
            orientation: "vertical"
            size_hint: .2, .1

            canvas:
                Color:
                    rgb: .5, .5, .5

                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Particle:"

            Spinner:
                id: particle
                text: "Select Particle"
                values: ["Particle 1"]
