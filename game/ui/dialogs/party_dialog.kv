#:kivy 1.9.0

<PartyDialog>:
    title: "Party"
    pos: 760, 100
    size_hint: .25, .6

    BoxLayout:
        pos: root.pos
        width: root.width
        height: root.height - root.title_bar.height
        padding: dp(12)
        orientation: "vertical"

        ItemList:
            size_hint_y: .9
            data: root.party

        GameButton:
            text: "Leave Party"
            size_hint_y: .1
            disabled: root.leave_disabled
            on_release: print("Leave Party")
