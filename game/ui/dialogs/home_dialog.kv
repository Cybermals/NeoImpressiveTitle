#:kivy 1.9.0

<HomeDialog>:
    title: "Home"
    pos: 0, 540
    size_hint: .2, .3

    BoxLayout:
        pos: root.pos
        width: root.width
        height: root.height - root.title_bar.height
        padding: dp(12)
        orientation: "vertical"

        GameButton:
            text: "Set Home"
            on_release: print("Set Home")

        GameButton:
            text: "Go Home"
            on_release: print("Go Home")

        GameButton:
            text: "Reset Home"
            on_release: print("Reset Home")

        GameLabel:
            text: "Dimension:"

        GameSpinner:
            values: [str(i) for i in range(10)]
            on_text: print(f"Dimension {self.text}")
