#:kivy 1.9.0

<ImageButton>:
    background_normal: ""
    background_down: ""
    background_disabled_normal: ""
    background_disabled_down: ""
    border: 1, 1, 1, 1
    _current_background: self.background_normal

    canvas.before:
        BorderImage:
            pos: self.pos
            size: self.size
            source: self._current_background
            border: self.border
