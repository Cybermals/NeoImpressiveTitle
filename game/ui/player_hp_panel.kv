#:kivy 1.9.0

<PlayerHPPanel>:
    orientation: "vertical"
    spacing: dp(8)

    GameLabel:
        size_hint_y: .45
        font_size: dp(32)
        text: "Attack"

    GameTexturedProgress:
        size_hint_y: .25
        value: 50

    BoxLayout:
        size_hint_y: .3

        GameImageButton:
            source: "images/ui/House.png"
            on_release: root.parent.parent.toggle_home_dialog()

        GameImageButton:
            source: "images/ui/Info.png"
            on_release: root.parent.parent.toggle_bio_dialog()

        GameImageButton:
            source: "images/ui/Person.png"
            on_release: root.parent.parent.toggle_friend_dialog()

        GameImageButton:
            source: "images/ui/Backpack.png"
            on_release: root.parent.parent.toggle_inventory_dialog()

        GameImageButton:
            source: "images/ui/PersonWalking.png"
            on_release: root.parent.parent.toggle_actions_dialog()

        GameImageButton:
            source: "images/ui/People.png"
            on_release: root.parent.parent.toggle_party_dialog()
